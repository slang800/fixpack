#!/usr/bin/env node
try {
  require('coffee-script/register');
  // in production, this will fail if coffeescript isn't installed, but the
  // coffee is compiled anyway, so it doesn't matter
} catch(e){}

var fixpack = require('../lib')
var path = require('path')
var defaultConfig = require('../config')
var config = require('rc')('fixpack', defaultConfig)
var files = config._

if (files.length) {
  config.files = files
}

config.files.forEach(function (file) {
  fixpack(path.resolve(file), config)
})
